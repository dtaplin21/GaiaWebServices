{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": null,
  "functions": {
    "api/projects.js": {
      "includeFiles": "shared/**"
    },
    "api/about.js": {
      "includeFiles": "shared/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/projects",
      "destination": "/api/projects.js"
    },
    {
      "source": "/api/projects/featured",
      "destination": "/api/projects.js"
    },
    {
      "source": "/api/about",
      "destination": "/api/about.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/public/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
